generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =========================
   ENUMS
========================= */

enum UserRole {
  BUYER
  OPS
  FINANCE
  ADMIN
}

enum OrderStatus {
  CREATED
  IN_PROGRESS
  COMPLETED
}

enum BatchStatus {
  CREATED
  INVOICED
  PAID
}

/* =========================
   CORE ENTITIES
========================= */

model Organization {
  id        String   @id @default(uuid())
  name      String
  gst       String?
  state     String
  createdAt DateTime @default(now())

  users  User[]
  orders Order[]
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  role         UserRole
  orgId        String?
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())

  org Organization? @relation(fields: [orgId], references: [id])

  ordersCreated  Order[]  @relation("OrderCreatedBy")
  batchesCreated OrderBatch[] @relation("BatchCreatedBy")
}

/* =========================
   PRODUCT & FACTORY
========================= */

model Product {
  id        String   @id @default(uuid())
  sku       String   @unique
  name      String
  type      String
  grade     String
  cvMin     Int
  cvMax     Int
  ashPct    Float
  moisture  Float
  pricePMT  Float
  active    Boolean  @default(true)

  inventories Inventory[]
  batches     OrderBatch[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Site {
  id     String  @id @default(uuid())
  name   String
  city   String
  state  String
  active Boolean @default(true)

  inventories Inventory[]
  batches     OrderBatch[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   INVENTORY (ERP-LIKE)
========================= */

model Inventory {
  id        String   @id @default(uuid())
  productId String
  siteId    String
  availableMT Float
  updatedAt DateTime @updatedAt
  updatedBy String

  product Product @relation(fields: [productId], references: [id])
  site    Site    @relation(fields: [siteId], references: [id])
  updater User    @relation(fields: [updatedBy], references: [id])

  @@unique([productId, siteId])
}

model InventoryHistory {
  id        String   @id @default(uuid())
  productId String
  siteId    String
  quantity  Float
  recordedAt DateTime @default(now())
  recordedBy String

  product Product @relation(fields: [productId], references: [id])
  site    Site    @relation(fields: [siteId], references: [id])
  recorder User    @relation(fields: [recordedBy], references: [id])
}

/* =========================
   ORDER & EXECUTION
========================= */

model Order {
  id          String      @id @default(uuid())
  orgId       String
  status      OrderStatus @default(CREATED)
  createdAt   DateTime    @default(now())
  createdBy   String

  org     Organization @relation(fields: [orgId], references: [id])
  creator User         @relation("OrderCreatedBy", fields: [createdBy], references: [id])
  batches OrderBatch[]
}

model OrderBatch {
  id         String      @id @default(uuid())
  orderId    String
  productId  String
  siteId     String
  quantityMT Float
  status     BatchStatus @default(CREATED)
  createdAt  DateTime    @default(now())
  createdBy  String

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  site    Site    @relation(fields: [siteId], references: [id])
  creator User    @relation("BatchCreatedBy", fields: [createdBy], references: [id])

  invoice Invoice?
  payment Payment?
}

/* =========================
   FINANCE
========================= */

model Invoice {
  id          String   @id @default(uuid())
  batchId     String   @unique
  number      String
  subtotal    Float
  gstType     String
  gstRate     Float
  gstAmount   Float
  totalAmount Float
  status      String
  erpStatus   String   @default("PENDING")
  createdAt   DateTime @default(now())

  batch    OrderBatch @relation(fields: [batchId], references: [id])
  payments Payment[]
}

model Payment {
  id        String   @id @default(uuid())
  invoiceId String
  amount    Float
  mode      String
  proofUrl  String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

/* =========================
   AUDIT (GENERIC)
========================= */

model AuditLog {
  id        String   @id @default(uuid())
  entity    String
  entityId  String
  action    String
  actorId   String?
  createdAt DateTime @default(now())
}
