generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  gst       String?
  createdAt DateTime @default(now())

  users     User[]
  orders    Order[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   // admin | finance | viewer
  orgId     String
  createdAt DateTime @default(now())

  org       Organization @relation(fields: [orgId], references: [id])
}

model Product {
  id        String   @id @default(uuid())
  type      String   // pellet | briquette
  grade     String
  cvKcal    Float
  ashPct    Float
  moisture  Float
  pricePMT  Float
  active    Boolean  @default(true)
}

model Order {
  id        String   @id @default(uuid())
  orgId     String
  type      String   // scheduled | non_scheduled
  status    String   // created | active | closed
  createdAt DateTime @default(now())

  org       Organization @relation(fields: [orgId], references: [id])
  batches   OrderBatch[]
}

model OrderBatch {
  id          String   @id @default(uuid())
  orderId     String
  productId   String
  quantityMT  Float
  deliveryAt  DateTime?
  createdAt   DateTime @default(now())

  order       Order    @relation(fields: [orderId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
  invoice     Invoice?
}

model Invoice {
  id          String   @id @default(uuid())
  batchId     String   @unique
  number      String
  amount      Float
  status      String   // pending | partial | paid
  createdAt   DateTime @default(now())

  batch       OrderBatch @relation(fields: [batchId], references: [id])
  payments    Payment[]
}

model Payment {
  id          String   @id @default(uuid())
  invoiceId   String
  amount      Float
  mode        String
  proofUrl    String?
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())

  invoice     Invoice @relation(fields: [invoiceId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  entity    String
  entityId  String
  action    String
  actorId  String?
  createdAt DateTime @default(now())
}
