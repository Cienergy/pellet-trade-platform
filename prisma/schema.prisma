generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  gst       String?
  createdAt DateTime @default(now())
  state     String
  orders    Order[]
  users     User[]
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         String
  orgId        String
  createdAt    DateTime @default(now())

  org          Organization @relation(fields: [orgId], references: [id])
}


model Product {
  id        String       @id @default(uuid())
  sku       String       @unique
  name      String
  type      String
  grade     String
  cvMin     Int
  cvMax     Int
  ashPct    Float
  moisture  Float
  pricePMT  Float
  active    Boolean      @default(true)
  inventory Inventory?
  batches   OrderBatch[]
}

model Inventory {
  id          String   @id @default(uuid())
  productId   String   @unique
  availableMT Float
  reservedMT  Float    @default(0)
  updatedAt   DateTime @updatedAt
  product     Product  @relation(fields: [productId], references: [id])
}

model Order {
  id        String       @id @default(uuid())
  orgId     String
  type      String
  status    String
  createdAt DateTime     @default(now())
  org       Organization @relation(fields: [orgId], references: [id])
  batches   OrderBatch[]
}

model OrderBatch {
  id         String    @id @default(uuid())
  orderId    String
  productId  String
  quantityMT Float
  deliveryAt DateTime?
  createdAt  DateTime  @default(now())
  invoice    Invoice?
  order      Order     @relation(fields: [orderId], references: [id])
  product    Product   @relation(fields: [productId], references: [id])
}

model Invoice {
  id          String   @id @default(uuid())
  batchId     String   @unique
  number      String
  subtotal    Float
  gstType     String
  gstRate     Float
  gstAmount   Float
  totalAmount Float
  status      String
  erpStatus   String   @default("PENDING")
  createdAt   DateTime @default(now())

  batch       OrderBatch @relation(fields: [batchId], references: [id])
  payments    Payment[]
}


model Payment {
  id        String   @id @default(uuid())
  invoiceId String
  amount    Float
  mode      String
  proofUrl  String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  entity    String
  entityId  String
  action    String
  actorId   String?
  createdAt DateTime @default(now())
}
